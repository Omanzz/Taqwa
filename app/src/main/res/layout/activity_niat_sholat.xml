<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E8668"
    tools:context=".NiatSholat"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoa"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#37B899"
                android:clickable="true"
                android:padding="14dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/titleDoa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niat Sholat Subuh"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtArab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleDoa"
                        android:text="أُصَلِّى فَرْضَ الصُّبْح رَكَعتَيْنِ مُسْتَقْبِلَ الْقِبْلَةِ أَدَاءً لله تَعَالَى"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtLatin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtArab"
                        android:textStyle="italic"
                        android:text="Usholli fardlo-subhi rak’ataini mustaqbilal qiblati adaa’an lillahi ta’ala."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtArti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtLatin"
                        android:text="Saya berniat mengerjakan sholat fardhu subuh sebanyak dua rakaat dengan menghadap kiblat, karena allah ta’ala."
                        android:textColor="@color/white" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoa2"
                android:layout_below="@id/cardDoa"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#37B899"
                android:clickable="true"
                android:padding="14dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/titleDoa2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niat Sholat Dzuhur"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtArab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleDoa2"
                        android:textColor="@color/white"
                        android:text="اُصَلِّيْ فَرْضَ الظُّهْرِ أَرْبَعَ رَكَعاَتٍ مُسْتَقْبِلَ الْقِبْلَةِ أَدَاءً لله تَعَالَى"/>

                    <TextView
                        android:id="@+id/txtLatin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtArab2"
                        android:textStyle="italic"
                        android:text="Usholli Fardlon dhuhri Arba'a Rok'aataim Mustaqbilal Qiblati Adaa-an Lillahi ta'aala"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtArti2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtLatin2"
                        android:text="Aku niat melakukan sholat fardu dhuhur 4 rakaat, sambil menghadap qiblat, saat ini, karena Allah ta'ala"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoa3"
                android:layout_below="@id/cardDoa2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#37B899"
                android:clickable="true"
                android:padding="14dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/titleDoa3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niat Sholat Ashar"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtArab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleDoa3"
                        android:text="َأُصَلِّى فَرْضَ العَصْرِأَرْبَعَ رَكَعاَتٍ مُسْتَقْبِلَ الْقِبْلَةِ أَدَاءً لله تَعَالَى"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtLatin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtArab3"
                        android:textStyle="italic"
                        android:text="Usholli fardlo-subhi rak’ataini mustaqbilal qiblati adaa’an lillahi ta’ala."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtArti3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtLatin3"
                        android:text="Aku niat melakukan sholat fardu ashar 4 rakaat, sambil menghadap qiblat, saat ini, karena Allah ta'ala"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoa4"
                android:layout_below="@id/cardDoa3"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#37B899"
                android:clickable="true"
                android:padding="14dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/titleDoa4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niat Sholat Maghrib"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtArab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleDoa4"
                        android:text="أُصَلِّى فَرْضَ المَغْرِبِ ثَلاَثَ رَكَعاَتٍ مُسْتَقْبِلَ الْقِبْلَةِ أَدَاءً لله تَعَالَ"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtLatin4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtArab4"
                        android:textStyle="italic"
                        android:text="Usholli Fardlol Maghribi Tsalaatsa Roka'aataim Mustaqbilal Qiblati Adaa-an Lillahi ta'aala"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtArti4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtLatin4"
                        android:text="Aku niat melakukan sholat fardu maghrib 3 rakaat, sambil menghadap qiblat, saat ini, karena Allah ta'ala"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoa5"
                android:layout_below="@id/cardDoa4"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#37B899"
                android:clickable="true"
                android:padding="14dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/titleDoa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niat Sholat Isya"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtArab5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleDoa5"
                        android:text="أُصَلِّى فَرْضَ العِشَاء ِأَرْبَعَ رَكَعاَتٍ مُسْتَقْبِلَ الْقِبْلَةِ أَدَاءً لله تَعَالَى"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtLatin5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtArab5"
                        android:textStyle="italic"
                        android:text="Usholli Fardlol I'syaa-i Arba'a Roka'aataim Mustaqbilal Qiblati Adaa-an Lillahi ta'aala"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtArti5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtLatin5"
                        android:text="Aku niat melakukan sholat fardu isya 4 rakaat, sambil menghadap qiblat, saat ini, karena Allah ta'ala"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>